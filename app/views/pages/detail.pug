extends ../layout

block content
    .container
        .row
            .col-md-7
                if movie.flash && movie.flash != ''
                    embed(width="720", height="600", type="application/x-shockwave-flash", src=movie.flash, allowFullScreen="true")
                else
                    .thumbnail
                        img(src=movie.poster, alt=movie.title)
                .panel.panel-defatul
                    .panel-heading
                        h3 评论区
                    .panel-body
                        ul.media-list.comment-list
                            each item in comments
                                li.media
                                    .pull-left
                                        a.comment(href='#comments', data-cid=item._id, data-tid=item.from._id)
                                            img.media-object.img-circle(src="http://wx2.sinaimg.cn/large/61e34c96ly1fhyci9sw3qj20r810aafg.jpg", style="width: 64px; height: 64px;")
                                    .media-body
                                        h4.media-heading #{item.from.name}
                                        p= item.content
                                        if item.reply && item.reply.length > 0
                                            each reply in item.reply
                                                .media
                                                    .pull-left
                                                        a.comment(href='#comments', data-cid=item._id, data-tid=reply.from._id)
                                                            img.media-object.img-circle(src="http://wx2.sinaimg.cn/large/61e34c96ly1fhyci9sw3qj20r810aafg.jpg", style="width: 50px; height: 50px;")
                                                    .media-body
                                                        h4.media-heading
                                                            | #{reply.from.name}
                                                            span.text-info &nbsp;回复&nbsp;
                                                            | #{reply.to.name}:
                                                        p #{reply.content}
                                    hr
                        #comments
                            form#commentForm(method="POST", action="/user/comment")
                                input(type="hidden", name="comment[movie]", value=movie._id)
                                if user
                                    input(type="hidden", name="comment[from]", value=user._id)
                                .form-group
                                    textarea.form-control(name="comment[content]", row="3")
                                if user
                                    button.btn.btn-primary.btn-comment(type='submit') 提交
                                else
                                    a.navbar-link(href="#", data-toggle="modal", data-target="#signinModal") 登录后评论
            .col-md-5
                dl.dl-horizontal
                    dt 名字
                    dd= movie.title
                    dt 导演
                    dd= movie.director
                    dt 国家
                    dd= movie.country
                    dt 上映年份
                    dd= movie.year
                    dt 语言
                    dd= movie.language
                    dt 简介
                    dd= movie.summary
    script(src='/js/detail.js')