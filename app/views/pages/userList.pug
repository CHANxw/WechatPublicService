extends ../layout

block content
    .container
        .row
            table.table.table-hover.table-bordered
                thead
                    tr
                        th 用户名
                        th 注册时间
                        th 删除
                tbody
                    each item in users
                        tr(class='item-id-' + item._id)
                            td= item.name
                            td= moment(item.meta.updateAt).format('MM/DD/YYYY')
                            td
                                button.btn.btn-danger.del(type='button', data-id=item._id) 删除







